<cn.gavinliu.android.lib.scale.ScaleFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_design_density="@integer/app_design_density"
    app:layout_design_height="@dimen/app_design_height"
    app:layout_design_width="@dimen/app_design_width">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#dedede"
        android:gravity="center"
        android:text="@string/hello_world"
        app:layout_height="50dp"
        app:layout_scale_by="width"
        app:layout_width="100dp" />

</cn.gavinliu.android.lib.scale.ScaleFrameLayout>
